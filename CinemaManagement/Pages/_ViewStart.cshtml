@{
    if (Context.Session.GetString("user") != null)
    {
        // Deserialize Session
        Models.Person account = JsonSerializer.Deserialize<Models.Person>(Context.Session.GetString("user"));
        if (account.Type == 1)
        {
            Layout = "_AdminLayout";
        }
        else
        {
            Layout = "_Layout";
        }
    }
    else
    {
        Layout = "_Layout";
    }
}
