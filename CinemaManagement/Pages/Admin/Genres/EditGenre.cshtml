@page
@model CinemaManagement.Pages.Admin.Genres.EditGenreModel
@{
    if (HttpContext.Session.GetString("user") == null)
    {
        // Redirect to Login Page
        Response.Redirect("/Cinema/SignIn");
    }
    if (HttpContext.Session.GetString("user") != null)
    {
        // Deserialize Session
        Models.Person account = JsonSerializer.Deserialize<Models.Person>(HttpContext.Session.GetString("user"));
        if (account.Type == 2)
        {
            Response.Redirect("/Index");
        }
    }
}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h1 style="color:white" class="h3 mb-0">Update Genre</h1>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="row align-items-center mb-3">
                            <div class="col-sm-2">
                                <label for="id" class="form-label">Genre ID:</label>
                            </div>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="id" readonly asp-for="@Model.Genre.GenreId">
                            </div>
                        </div>
                        <div class="row align-items-center mb-3">
                            <div class="col-sm-2">
                                <label for="description" class="form-label">Description:</label>
                            </div>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="description" asp-for="@Model.Genre.Description" placeholder="Enter genre description">
                                <span asp-validation-for="Genre.Description" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
